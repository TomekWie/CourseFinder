{% extends 'base.html.twig' %}



{% block body %}
    <h1>Courses list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>School</th>
                <th>City</th>
                <th>Programinglanguage</th>
                <th>Startdate</th>
                <th>Enddate</th>
                <th>Price</th>
                <th>Hours</th>
                <th>Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for course in courses %}
                <tr>
                    <td><a href="{{ path('course_show', { 'id': course.id }) }}">{{ course.id }}</a></td>
                    <td>{{ course.name }}</td>
                    <td>{{ course.description }}</td>
                    <td>{{ course.school.name }}</td>
                    <td>{{ course.city }}</td>
                    <td>{{ course.programingLanguage }}</td>
                    <td>{% if course.startDate %}{{ course.startDate|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if course.endDate %}{{ course.endDate|date('Y-m-d') }}{% endif %}</td>
                    <td>{{ course.price }}</td>
                    <td>{{ course.hours }}</td>
                    <td>{% if course.available %}Yes{% else %}No{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('course_show', { 'id': course.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('course_edit', { 'id': course.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            
                {% for review in course.reviews %}
                    Opinia: {{ review.content }} Ocena: {{ review.stars }}</li>
                    {% endfor %}        
            
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('course_new') }}">Create a new course</a>
    </li>
</ul>
{% endblock %}
