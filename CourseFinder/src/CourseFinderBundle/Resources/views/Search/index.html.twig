{% extends 'base.html.twig' %}

{% block body %}
<div class="col-md-6">
    <h1>Wyszukaj kurs</h1>

    <form action="/results" method="post">
        <div class="form-group">
            <label>Nazwa szkoły: </label>
            <input type="text" name="school"  class="form-control">
        </div>
        <div class="form-group">
            <label>Nazwa kursu: </label>
            <input type="text" name="course" class="form-control">
        </div>
        <div class="form-group">
            <label>Miasto: </label>
            <input type="text" name="city" class="form-control">
        </div>
        <div class="form-group">
            <label>Jaki język programowania Cię intersuje: </label>
            <input type="text" name="language" class="form-control">
        </div>
        <div class="form-group">
            <label>Maksymalna cena kursu (w zł): </label>
            <input type="number" min="500" step="500" name="maxPrice" placeholder="np: 10000" class="form-control">
        </div>
        <div class="form-group">
            <label>Ilość godzin zajęć w kursie: </label>
            <select name="hours"  class="form-control">
            <option value="-">--</option>
                <option value="1-50">1-50 h.</option>
                <option value="51-100">51-100 h. </option>
                <option value="100-200">101-200 h.</option>
                <option value="200-300">201-300 h.</option>
            </select>
        </div>
        <div class="form-group">
            <label>Kurs powinien się rozpocząć po: </label>
            <input type="date" name="startDate" class="form-control">
        </div>
        <div class="form-group">
            <label>Kurs powinien się skończyć do: </label>
            <input type="date" name="endDate" class="form-control">
        </div>
        <div class="form-group">
            <label>Minimalna ilośc gwiazdek: </label>
            <select name="stars" class="form-control">
                <option value="1">Bez znaczenia</option>
                <option value="2">Dwie lub więcej</option>
                <option value="3">Trzy lub więcej</option>
                <option value="4">Cztery lub więcej</option>
                <option value="5">Tylko pięć gwiazdek</option>
            </select>
        </div>
        <input type="submit" value="wyszukaj" class="btn btn-primary">
    </form>
</div>
{% endblock %}