{% extends 'base.html.twig' %}

{% block body %}
    <h1>Course</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
             <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>School</th>
                <td>{{ course.school.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ course.city }}</td>
            </tr>
            <tr>
                <th>Programinglanguage</th>
                <td>{{ course.programingLanguage }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if course.startDate %}{{ course.startDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{% if course.endDate %}{{ course.endDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ course.price }}</td>
            </tr>
            <tr>
                <th>Hours</th>
                <td>{{ course.hours }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{% if course.available %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('course_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('course_edit', { 'id': course.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
